{
  "name": "@distracted/server",
  "version": "1.1.0",
  "description": "Local server + Claude Code hook installer for distracted's Claude Blocker integration.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/f1shy-dev/distracted.git",
    "directory": "packages/server"
  },
  "bin": "./dist/bin.js",
  "files": [
    "dist",
    "public",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "scripts": {
    "prepublishOnly": "mkdir -p public && cp ../extension/public/readme-banner.png public/",
    "build": "bun build src/bin.ts --outdir dist --target node && printf '#!/usr/bin/env node\\n' | cat - dist/bin.js > dist/bin.js.tmp && mv dist/bin.js.tmp dist/bin.js && chmod +x dist/bin.js",
    "dev": "bun run src/bin.ts",
    "lint": "oxlint --type-aware --type-check",
    "lint:fix": "oxlint --type-aware --type-check --fix",
    "lint:ci": "oxlint --type-aware --type-check --format github",
    "format": "oxfmt",
    "knip": "knip",
    "check": "bun run lint:fix && bun run format && bun run knip"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.7",
    "@hono/node-ws": "^1.2.0",
    "cac": "^6.7.14",
    "hono": "^4.11.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "bun-types": "^1.2.0",
    "knip": "catalog:",
    "oxfmt": "catalog:",
    "oxlint": "catalog:",
    "oxlint-tsgolint": "catalog:",
    "typescript": "catalog:"
  }
}
